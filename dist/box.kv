#:kivy 1.5.1

<Box>:
    size: self.size
    pos: self.pos
    coords: None
    canvas:
        Clear
        Color:
            rgba: self.colored if self.texture == False else (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
            texture: self.texture if self.texture != False else None

<GameMatrix>:
    canvas:
        Clear
        Color:
            #rgba: (.2235,.2235,.2235,1)
            rgba: (.3535,.3535,.3535,1)
        Rectangle:
            pos: (self.pos[0]-1, self.pos[1]-1)
            size: (self.size[0]+2, self.size[1]+2)
